#!/bin/bash

# NatureCode Smart Installer
# One-line install: curl -fsSL https://raw.githubusercontent.com/naturecode-official/naturecode/main/install-smart.sh | bash
# Automatically asks user for installation mode

set -e

# Color definitions - 只使用 tput，不支持则无颜色
COLORS_SUPPORTED=false
RED=""
GREEN=""
YELLOW=""
BLUE=""
MAGENTA=""
CYAN=""
NC=""
BOLD=""

# 只在终端支持颜色且 tput 可用时启用颜色
if [ -t 1 ] && command -v tput >/dev/null 2>&1; then
    # 检查终端是否真正支持颜色
    if tput colors >/dev/null 2>&1 && [ "$(tput colors)" -ge 8 ]; then
        COLORS_SUPPORTED=true
        RED=$(tput setaf 1)
        GREEN=$(tput setaf 2)
        YELLOW=$(tput setaf 3)
        BLUE=$(tput setaf 4)
        MAGENTA=$(tput setaf 5)
        CYAN=$(tput setaf 6)
        NC=$(tput sgr0)
        BOLD=$(tput bold)
    fi
fi

# Log functions for simple mode
log_simple() {
    echo "$1"
}

log_info_simple() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${BLUE}[INFO]${NC} $1\n"
    else
        echo "[INFO] $1"
    fi
}

log_success_simple() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${GREEN}[SUCCESS]${NC} $1\n"
    else
        echo "[SUCCESS] $1"
    fi
}

log_error_simple() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${RED}[ERROR]${NC} $1\n"
    else
        echo "[ERROR] $1"
    fi
}

# Log functions for pro mode
log_step() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${MAGENTA}[STEP]${NC} $1\n"
    else
        echo "[STEP] $1"
    fi
}

log_info() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${CYAN}[INFO]${NC} $1\n"
    else
        echo "[INFO] $1"
    fi
}

log_success() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${GREEN}[SUCCESS]${NC} $1\n"
    else
        echo "[SUCCESS] $1"
    fi
}

log_warning() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${YELLOW}[WARNING]${NC} $1\n"
    else
        echo "[WARNING] $1"
    fi
}

log_error() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${RED}[ERROR]${NC} $1\n"
    else
        echo "[ERROR] $1"
    fi
}

# Show banner
show_banner() {
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${BLUE}${BOLD}"
    fi
    echo "╔══════════════════════════════════════════════════════════════════╗"
    echo "║                   NatureCode Smart Installer                     ║"
    echo "║           Cross-platform AI Assistant for Terminal               ║"
    echo "║                       Version: 1.4.5.3                           ║"
    echo "╚══════════════════════════════════════════════════════════════════╝"
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b\n" "${NC}"
    fi
}

# Ask for installation mode
ask_installation_mode() {
    echo ""
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "${YELLOW}Select installation mode:${NC}\n"
    else
        echo "Select installation mode:"
    fi
    echo ""
    
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "  1) ${GREEN}Simple Mode${NC} (Recommended for most users)\n"
    else
        echo "  1) Simple Mode (Recommended for most users)"
    fi
    echo "     • Quick and quiet installation"
    echo "     • Minimal output"
    echo "     • Automatic decisions"
    echo ""
    
    if [ "$COLORS_SUPPORTED" = "true" ]; then
        printf "%b" "  2) ${CYAN}Professional Mode${NC} (For developers/advanced users)\n"
    else
        echo "  2) Professional Mode (For developers/advanced users)"
    fi
    echo "     • Detailed installation process"
    echo "     • System information"
    echo "     • Interactive prompts"
    echo "     • Better error diagnostics"
    echo ""
    
    # 检查是否在交互式终端中
    if [ -t 0 ]; then
        # 交互式终端 - 询问用户
        if [ "$COLORS_SUPPORTED" = "true" ]; then
            printf "%b" "${YELLOW}Enter choice [1-2] (default: 1): ${NC}\n"
        else
            echo -n "Enter choice [1-2] (default: 1): "
        fi
        
        read -r choice
    else
        # 非交互式（如 curl | bash）- 自动选择简单模式
        echo "Non-interactive mode detected, using Simple Mode"
        choice="1"
    fi
    
    case "${choice:-1}" in
        1)
            echo ""
            if [ "$COLORS_SUPPORTED" = "true" ]; then
                printf "%b" "${GREEN}Selected: Simple Mode${NC}\n"
            else
                echo "Selected: Simple Mode"
            fi
            INSTALL_MODE="simple"
            ;;
        2)
            echo ""
            if [ "$COLORS_SUPPORTED" = "true" ]; then
                printf "%b" "${CYAN}Selected: Professional Mode${NC}\n"
            else
                echo "Selected: Professional Mode"
            fi
            INSTALL_MODE="pro"
            ;;
        *)
            echo ""
            if [ "$COLORS_SUPPORTED" = "true" ]; then
                printf "%b" "${YELLOW}Invalid choice, using Simple Mode${NC}\n"
            else
                echo "Invalid choice, using Simple Mode"
            fi
            INSTALL_MODE="simple"
            ;;
    esac
}

# Check if command exists
check_command() {
    if ! command -v "$1" &> /dev/null; then
        if [ "$INSTALL_MODE" = "pro" ]; then
            log_error "Required command '$1' not found"
        else
            log_error_simple "Required $1 not installed"
        fi
        return 1
    fi
    return 0
}

# Get current version if installed
get_installed_version() {
    if command -v naturecode &> /dev/null; then
        naturecode --version 2>/dev/null | head -1 | grep -o '[0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+' || echo "unknown"
    else
        echo "not_installed"
    fi
}

# Show system info (pro mode only)
show_system_info() {
    if [ "$INSTALL_MODE" = "pro" ]; then
        log_step "System Information"
        echo -e "  OS: $(uname -s)"
        echo -e "  Architecture: $(uname -m)"
        echo -e "  Shell: $(basename "$SHELL")"
        echo -e "  Node.js: $(node --version 2>/dev/null || echo "Not installed")"
        echo -e "  npm: $(npm --version 2>/dev/null || echo "Not installed")"
        echo -e "  Current NatureCode: $(get_installed_version)"
        echo ""
    fi
}

# Check prerequisites
check_prerequisites() {
    if [ "$INSTALL_MODE" = "pro" ]; then
        log_step "Checking prerequisites"
    else
        log_info_simple "Checking requirements..."
    fi
    
    # Check Node.js
    if ! check_command "node"; then
        if [ "$INSTALL_MODE" = "pro" ]; then
            log_error "Node.js is required but not installed"
            log_info "Please install Node.js from: https://nodejs.org/"
        else
            log_error_simple "Node.js required: https://nodejs.org/"
        fi
        exit 1
    fi
    
    # Check npm
    if ! check_command "npm"; then
        if [ "$INSTALL_MODE" = "pro" ]; then
            log_error "npm is required but not installed"
            log_info "Please install npm (comes with Node.js)"
        else
            log_error_simple "npm required (comes with Node.js)"
        fi
        exit 1
    fi
    
    # Check Node.js version (minimum v16)
    NODE_VERSION=$(node --version | cut -d'v' -f2)
    NODE_MAJOR=$(echo "$NODE_VERSION" | cut -d'.' -f1)
    
    if [ "$NODE_MAJOR" -lt 16 ]; then
        if [ "$INSTALL_MODE" = "pro" ]; then
            log_error "Node.js version $NODE_VERSION is too old. Minimum required: v16+"
            log_info "Please upgrade Node.js from: https://nodejs.org/"
        else
            log_error_simple "Node.js $NODE_VERSION too old. Need v16+"
        fi
        exit 1
    fi
    
    if [ "$INSTALL_MODE" = "pro" ]; then
        log_success "All prerequisites satisfied"
    else
        log_success_simple "Requirements OK"
    fi
}

# Install NatureCode (simple mode)
install_simple() {
    local TARGET_VERSION="1.4.5.3"
    local CURRENT_VERSION=$(get_installed_version)
    
    if [ "$CURRENT_VERSION" = "1.4.5.3" ]; then
        log_success_simple "NatureCode v1.4.5.3 is already installed"
        echo ""
        echo "To update or reinstall, first remove:"
        echo "  npm uninstall -g naturecode"
        echo ""
        echo "Then run this installer again."
        exit 0
    fi
    
    if [ "$CURRENT_VERSION" != "not_installed" ]; then
        log_info_simple "Updating from v$CURRENT_VERSION..."
        npm uninstall -g naturecode 2>/dev/null || true
    else
        log_info_simple "Installing NatureCode v$TARGET_VERSION..."
    fi
    
    # Create temp directory
    TEMP_DIR=$(mktemp -d)
    cd "$TEMP_DIR"
    
    # Download from GitHub
    log_info_simple "Downloading NatureCode from GitHub..."
    curl -fsSL https://github.com/naturecode-official/naturecode/archive/refs/heads/main.tar.gz -o naturecode.tar.gz 2>/dev/null || {
        log_error_simple "Failed to download from GitHub"
        exit 1
    }
    tar -xzf naturecode.tar.gz --strip-components=1
    rm -f naturecode.tar.gz
    
    # Install
    npm install --silent
    npm install -g . --silent
    
    # Cleanup
    cd /
    rm -rf "$TEMP_DIR"
    
    # Verify
    if command -v naturecode &> /dev/null; then
        INSTALLED_VERSION=$(naturecode --version 2>/dev/null | head -1 | grep -o '[0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+' || echo "unknown")
        
        if [ "$INSTALLED_VERSION" = "1.4.5.3" ]; then
            log_success_simple "Successfully installed NatureCode v1.4.5.3"
            echo ""
            echo "Quick start:"
            echo "  naturecode model     # Configure AI model"
            echo "  naturecode start     # Start interactive session"
            echo "  naturecode help      # Get AI assistance"
        else
            log_info_simple "Installed version: $INSTALLED_VERSION"
        fi
    else
        log_error_simple "Installation failed"
        exit 1
    fi
}

# Install NatureCode (pro mode)
install_pro() {
    local TARGET_VERSION="1.4.5.3"
    local CURRENT_VERSION=$(get_installed_version)
    
    log_step "Installation Details"
    echo -e "  Target version: v$TARGET_VERSION"
    echo -e "  Current version: $CURRENT_VERSION"
    echo -e "  GitHub source: naturecode-official/naturecode"
    echo ""
    
    if [ "$CURRENT_VERSION" = "1.4.5.3" ]; then
        log_success "NatureCode v1.4.5.3 is already installed"
        echo ""
        echo "Options:"
        echo "  1) Reinstall NatureCode"
        echo "  2) Show help information"
        echo "  3) Exit"
        echo ""
        printf "%b" "${YELLOW}Enter choice [1-3]: ${NC}\n"
        read -r choice
        
        case $choice in
            1)
                log_info "Reinstalling..."
                npm uninstall -g naturecode 2>/dev/null || true
                ;;
            2)
                show_post_install
                exit 0
                ;;
            3)
                log_info "Exiting"
                exit 0
                ;;
            *)
                log_error "Invalid choice"
                exit 1
                ;;
        esac
    elif [ "$CURRENT_VERSION" != "not_installed" ]; then
        log_info "Found NatureCode v$CURRENT_VERSION"
        echo ""
        printf "%b" "${YELLOW}Update to v$TARGET_VERSION? [Y/n]: ${NC}\n"
        read -r response
        if [[ "$response" =~ ^([nN][oO]|[nN])$ ]]; then
            log_info "Update cancelled"
            exit 0
        fi
        
        log_info "Removing old version..."
        npm uninstall -g naturecode 2>/dev/null || true
    fi
    
    log_step "Downloading NatureCode..."
    
    # Create temporary directory
    TEMP_DIR=$(mktemp -d)
    trap "rm -rf '$TEMP_DIR'" EXIT
    
    cd "$TEMP_DIR"
    
    # Download from GitHub
    log_info "Downloading from GitHub..."
    curl -fsSL https://github.com/naturecode-official/naturecode/archive/refs/heads/main.tar.gz -o naturecode.tar.gz || {
        log_error "Failed to download from GitHub"
        exit 1
    }
    tar -xzf naturecode.tar.gz --strip-components=1
    rm -f naturecode.tar.gz
    
    log_info "Installing dependencies..."
    if npm install --silent; then
        log_success "Dependencies installed"
    else
        log_error "Failed to install dependencies"
        exit 1
    fi
    
    log_info "Installing globally..."
    if npm install -g . --silent; then
        log_success "NatureCode installed globally"
    else
        log_error "Failed to install globally"
        exit 1
    fi
    
    # Verify installation
    if command -v naturecode &> /dev/null; then
        INSTALLED_VERSION=$(naturecode --version 2>/dev/null | head -1 | grep -o '[0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+' || echo "unknown")
        if [ "$INSTALLED_VERSION" = "$TARGET_VERSION" ]; then
            log_success "Successfully installed NatureCode v$INSTALLED_VERSION"
        else
            log_warning "Installed version ($INSTALLED_VERSION) doesn't match target ($TARGET_VERSION)"
        fi
    else
        log_error "Installation verification failed"
        exit 1
    fi
}

# Show post-install instructions
show_post_install() {
    if [ "$INSTALL_MODE" = "pro" ]; then
        log_step "Post-installation Instructions"
    fi
    
    echo ""
        printf "%b" "${GREEN}${BOLD}NatureCode has been successfully installed!${NC}\n"
    echo ""
    echo "To get started:"
    echo "  1. Configure your AI model:"
    echo "     ${CYAN}naturecode model${NC}"
    echo ""
    echo "  2. Start an interactive session:"
    echo "     ${CYAN}naturecode start${NC}"
    echo ""
    echo "  3. Get help:"
    echo "     ${CYAN}naturecode help${NC}              # Direct AI chat"
    echo "     ${CYAN}naturecode help \"your question\"${NC}  # Get specific help"
    echo ""
    echo "  4. Check available commands:"
    echo "     ${CYAN}naturecode --help${NC}"
    echo ""
    
    if [ "$INSTALL_MODE" = "pro" ]; then
        echo "Features:"
        echo "  • Direct AI assistance with Ollama/DeepSeek"
        echo "  • File system operations"
        echo "  • Git integration"
        echo "  • Code analysis and review"
        echo "  • Project management"
        echo "  • Plugin system"
        echo ""
        echo "For more information, visit:"
        echo "  https://github.com/naturecode-official/naturecode"
        echo ""
    fi
}

# Main installation flow
main() {
    show_banner
    
    # Ask for installation mode
    ask_installation_mode
    
    # Show system info for pro mode
    show_system_info
    
    # Check prerequisites
    check_prerequisites
    
    # Install based on mode
    if [ "$INSTALL_MODE" = "simple" ]; then
        install_simple
    else
        install_pro
    fi
    
    # Show post-install instructions
    show_post_install
}

# Handle errors
handle_error() {
    if [ "$INSTALL_MODE" = "pro" ]; then
        log_error "Installation failed!"
        log_error "Error on line $1"
        log_info "Please check:"
        log_info "  1. Node.js and npm are installed"
        log_info "  2. You have write permissions"
        log_info "  3. Internet connection is available"
        log_info ""
        log_info "For help, visit: https://github.com/naturecode-official/naturecode/issues"
    else
        log_error_simple "Installation failed!"
        echo "Please check:"
        echo "  1. Node.js and npm are installed"
        echo "  2. Internet connection"
        echo ""
        echo "For help: https://github.com/naturecode-official/naturecode/issues"
    fi
    exit 1
}

# Set trap for errors
trap 'handle_error $LINENO' ERR

# Run main function
main

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/terminal_black"
    tools:context=".MainActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/terminal_dark_gray"
        app:title="NatureCode Terminal"
        app:titleTextColor="@color/terminal_green"
        app:menu="@menu/main_menu">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_terminal"
            android:tint="@color/terminal_green" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Terminal Output Area -->
    <ScrollView
        android:id="@+id/terminal_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/terminal_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textIsSelectable="true"
            android:lineSpacingExtra="2dp" />

    </ScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/terminal_dark_gray">

        <EditText
            android:id="@+id/terminal_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter command..."
            android:inputType="text|textMultiLine"
            android:imeOptions="actionSend"
            android:maxLines="3"
            android:padding="12dp"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:hintTextColor="@color/terminal_gray"
            android:textColorHint="@color/terminal_gray" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            android:tint="@color/terminal_green"
            android:contentDescription="Send command" />

    </LinearLayout>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/terminal_dark_gray"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_clear"
            android:tint="@color/terminal_white"
            android:contentDescription="Clear terminal" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            android:tint="@color/terminal_white"
            android:contentDescription="Settings" />

        <ImageButton
            android:id="@+id/file_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_folder"
            android:tint="@color/terminal_white"
            android:contentDescription="File manager" />

        <ImageButton
            android:id="@+id/help_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_help"
            android:tint="@color/terminal_white"
            android:contentDescription="Help" />

    </LinearLayout>

</LinearLayout>